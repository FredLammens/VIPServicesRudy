<Window x:Class="VIPServicesRudyUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VIPServicesRudy" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Vip Services Rudy" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="NewReservationBtn" Grid.Column="0" Content="Nieuwe Reservatie" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2" Click="NewReservationBtn_Click"  /><!--Nieuwe Reservatie-->
            <Button x:Name="SearchReservationBtn" Grid.Column="1" Content="Zoek Reservatie" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2" Click="SearchReservationBtn_Click" /><!--Zoek Reservatie-->
        </Grid>

    </Grid>
</Window>
