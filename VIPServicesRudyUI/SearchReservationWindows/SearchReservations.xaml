<Window x:Class="VIPServicesRudyUI.SearchReservations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIPServicesRudyUI"
        mc:Ignorable="d"
        Title="SearchReservations" Height="450" Width="800">
    <StackPanel Margin="10">
        <!--Zelfde als existing client mss hergebruiken ?-->
        <StackPanel Orientation="Horizontal" Margin="2" HorizontalAlignment="Center">
            <TextBox Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Margin="0,0,10,0"/>
            <Button Grid.Row="0" Content="Search" HorizontalAlignment="Center"/>
        </StackPanel>
        <DataGrid/>
        <Button x:Name="ShowReservationBtn" Content="Toon Reservatie" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Click="ShowReservationBtn_Click"/>
    </StackPanel>
</Window>
